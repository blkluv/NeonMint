---
// Updated allTools array with emoji services
const allTools = [
  "🏧 Wallet",
  "🅰️ AD",
  "🎦 Reel",
  "🖼️ Pic",
  "🤔 What3Words",
  "🥶 Icebreaker",
  "🤝 Barter",
  "📍 ADDY",
  "🚀 Takeoff",
  "💯 $JERSEY Points",
  "🆔 FaceTime",
  "🪙 $JERSEY",
  "📻 Jersey Club Musik",
  "🎙️ ReelView",
  "💿 ReelMix",
  "🏝️ Atlantic City",
  "🟠 Livestream",
  "🪩 Dance",
  "📜 History",
  "🍔 Food",
];

import Capsule from "../ui/Capsule.astro";

type ToolVariant = "default" | "center";

// Updated base classes for better spacing and wrapping
const baseClasses = "flex flex-wrap gap-3 max-lg:gap-2 max-sm:gap-1.5";

// Variant-specific classes
const variantClasses: Record<ToolVariant, string> = {
  default: "cursor-default",
  center: "justify-center cursor-default",
};

const { variant = "default", linkEnabled = false, size = "md" } = Astro.props;

// Combine base classes with variant-specific classes
const classes = `${baseClasses} ${variantClasses[variant as ToolVariant]}`;
---

<div class={classes}>
  {allTools.map((tool) => (
    <Capsule 
      lang={tool} 
      linkEnabled={linkEnabled} 
      size={size} 
      {/* Removed the 'key' prop as it's not used by Astro components in this context */}
    />
  ))}
</div>