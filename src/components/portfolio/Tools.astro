---
import Capsule from "../ui/Capsule.astro";

type ToolVariant = "default" | "center";

// Define your TikTok channels with their URLs
const allTools = [
  { name: "@healxyz", link: "https://www.tiktok.com/@healxyz" },
  { name: "@luvnft", link: "https://www.tiktok.com/@luvnft" },
  { name: "@deliv3ry", link: "https://www.tiktok.com/@deliv3ry" },
  { name: "@rntbnb", link: "https://www.tiktok.com/@rntbnb" },
  { name: "@twerksocial", link: "https://www.tiktok.com/@twerksocial" },
  { name: "@manifestppv", link: "https://www.tiktok.com/@manifestppv" },
  { name: "@rfptok", link: "https://www.tiktok.com/@rfptok" },
  { name: "@rwatok", link: "https://www.tiktok.com/@rwatok" },
  { name: "@yenobet", link: "https://www.tiktok.com/@yenobet" },
  { name: "@foodcoins", link: "https://www.tiktok.com/@foodcoins" },
  { name: "@ugcreviews", link: "https://www.tiktok.com/@ugcreviews" },
  { name: "@lumeebooth", link: "https://www.tiktok.com/@lumeebooth" },
  { name: "@aipromptok", link: "https://www.tiktok.com/@aipromptok" },
  { name: "@smilesats", link: "https://www.tiktok.com/@smilesats" },
];

// Variant setup
const baseClasses = "flex flex-wrap gap-4 max-lg:gap-1 grid-auto-efe";
const variantClasses: Record<ToolVariant, string> = {
  default: "cursor-default",
  center: "justify-center cursor-default",
};

const { variant = "default", linkEnabled = true, size = "md" } = Astro.props;
const classes = `${baseClasses} ${variantClasses[variant as ToolVariant]}`;
---

<div class={classes}>
  {allTools.map((tool) => (
    <a
      href={tool.link}
      target="_blank"
      rel="noopener noreferrer"
      aria-label={`Visit ${tool.name} TikTok channel`}
    >
      <Capsule lang={tool.name} linkEnabled={true} size={size} />
    </a>
  ))}
</div>
