---
import Heading from "../ui/Heading.astro";
import { Icon } from "astro-icon/components";

// Each step in the Web5 bartering blueprint
const EXPERIENCE = [
{
  id: 1,
  title: "Follow",
  description: `
    Follow <strong>@FoodReelView</strong> on TikTok`,
},
{
  id: 2,
  title: "Tap",
  description: `
    Tap the wand icon in bio to open the ReelView AR mic podcast  
  `,
},
{
  id: 3,
  title: "ReelView",
  description: `
    Leave a ReelView tagging the restaurant and @FoodReelView with #FoodReelView. We will DM the winner! 
  `,
}
];
---

<section class="py-8 px-8 max-md:py-4 mb-4 scroll-m-16" id="experience">
  <div class="flex flex-col pt-8 max-w-5xl mx-auto relative">
    <!-- Section Heading -->
    <div class="flex gap-4 items-center justify-center">
      <Icon class="text-3xl text-mint-400" name="mdi:heart" />
      <Heading text="How To Leave A" textGradient="ReelView" level={2} />
    </div>

    <!-- Vertical Timeline Line -->
    <div class="absolute left-8 top-40 bottom-12 w-px bg-mint-500/40"></div>

    <!-- Steps -->
    <ol class="relative mt-10">
      {EXPERIENCE.map((step) => (
        <li class="relative pl-14 mb-14">
          <!-- Bullet -->
          <span class="absolute left-6 top-2 h-4 w-4 rounded-full bg-mint-400 shadow-[0_0_10px_#5fffc9]" />

          <!-- Step Content -->
          <article role="article" aria-labelledby={`step-${step.id}`}>
            <h3
              id={`step-${step.id}`}
              class="text-xl font-semibold text-mint-300"
            >
              {step.id}Ô∏è‚É£ {step.title}
            </h3>
            <p
              class="mt-2 text-gray-300 leading-relaxed"
              set:html={step.description}
            ></p>
          </article>
        </li>
      ))}
    </ol>

    <!-- Summary -->
    <div class="mt-20 border-t border-mint-400/20 pt-10 text-center">
      <h3 class="text-2xl font-black text-mint-400 mb-3">
        üé¨ Review ‚Üí Trend ‚Üí Earn
      </h3>
      <p class="text-gray-300 leading-relaxed">
        üçî Food ReelView Cycle
        <br />
        <strong>Grab the AR Mic</strong> ¬∑ 
        <strong>Create the Reel</strong> ¬∑ 
        <strong>Claim Your Prize</strong> ¬∑ 
      </p>
    </div>
  </div>
</section>
