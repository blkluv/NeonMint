---
import Social from "../ui/Social.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const [staticData] = await getCollection("staticData");
const {
  github,
  alias,
  instagram,
  email,
  youtube,
  linkedin,
  emailIconName,
  youtubeIconName,
  linkedinIconName,
  instagramIconName,
  githubIconName,
} = staticData.data;
---

<footer
  class="relative bottom-0 w-full px-4 py-8 font-medium text-blacktext dark:bg-transparent dark:border-t dark:border-zinc-800 dark:text-zinc-300 max-lg:mt-3"
  role="contentinfo"
  aria-label="Site footer"
>
  <nav
    class="mx-auto flex max-w-7xl flex-row items-center justify-between gap-6 text-xl max-xl:px-6 max-sm:flex-col"
    aria-label="Footer navigation"
  >
    <!-- ‚úÖ Text Logo -->
    <a
      href="/"
      aria-label="Return to homepage"
      class="flex flex-col items-center sm:items-start leading-tight group"
    >
      <span
        class="text-2xl font-black bg-gradient-to-r from-riptide-400 to-mint-400 bg-clip-text text-transparent transition-all duration-300 group-hover:drop-shadow-[0_0_12px_#5fffc9]"
      >
        BLKLUV.ORG
      </span>
      <span
        class="text-xs font-semibold tracking-widest text-mint-400 opacity-80 group-hover:opacity-100 transition-all"
      >
        powered by HAHZ.LIVE
      </span>
    </a>

    <!-- ‚úÖ Developer Credit -->
    <div class="text-center text-base italic max-sm:mt-4">
      <a
        href={github}
        class="flex items-center justify-center gap-2 font-normal hover:text-mint-400 transition-colors"
        aria-label="About the website development"
      >
        <Icon name="code" aria-hidden="true" class="text-mint-400" />
        Developed by <strong>{alias}</strong>, manifested with ‚ù§Ô∏è‚Äçüî• love.
      </a>
    </div>

    <!-- ‚úÖ Social Icons -->
    <div
      class="flex items-center justify-center gap-5"
      role="group"
      aria-label="Social media links"
    >
      <Social
        link={`mailto:${email}`}
        iconName={emailIconName}
        label={`Send email to ${email}`}
      />
      <Social
        link={instagram}
        iconName={instagramIconName}
        label={`Visit ${alias} on Instagram`}
      />
      <Social
        link={youtube}
        iconName={youtubeIconName}
        label={`Visit ${alias} on YouTube`}
      />
      <Social
        link={github}
        iconName={githubIconName}
        label={`Visit ${alias} on GitHub`}
      />
      <Social
        link={linkedin}
        iconName={linkedinIconName}
        label={`Visit ${alias} on LinkedIn`}
      />
    </div>
  </nav>
</footer>
