---
import Navigation from "./Navigation.astro";
import ThemeIcon from "../ui/ThemeIcon.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const collection = await getCollection("staticData");
const data = collection?.[0]?.data ?? {};

// Ensure tiktok has a fallback if missing in data
const tiktok = data.tiktok ?? "https://www.tiktok.com/@foodreelviews";

// Normalize path to remove trailing slash for consistent matching
const currentPath = Astro.url.pathname.replace(/\/$/, "") || "/";

// UPDATED: Fixed route to 'about-me' (plural) to match your page structure
const routes = ["/", "/portfolio", "/about-me"];
const isActiveRoute = routes.includes(currentPath);

const navItems = isActiveRoute
  ? ["home", "work", "solutions"]
  : ["home", "blog", "about"];
---

<header
  role="banner"
  aria-label="Main navigation"
  class="sticky top-0 z-50 w-full p-4 font-medium text-blacktext dark:text-zinc-300 dark:bg-[#0E0E11]/80 dark:border-b dark:border-zinc-800 bg-white/90 backdrop-blur-xs dark:backdrop-blur-xs max-md:z-50 max-md:px-0 transition-all"
>
  <div class="relative mx-auto flex max-w-7xl flex-row items-center justify-between max-xl:px-6">
    <a href="/" aria-label="Go to home" class="flex flex-col leading-tight group">
      <span class="text-2xl font-black bg-gradient-to-r from-riptide-400 to-mint-400 bg-clip-text text-transparent">
        Food ReelView
      </span>
      <span class="text-xs font-semibold tracking-widest text-mint-400 opacity-80">
        TikTok Challenge
      </span>
    </a>

    <Navigation items={navItems} />

    <div class="max-md:hidden flex items-center gap-5 text-xl">
      <a
        href={tiktok}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:scale-110 transition-transform text-current hover:text-mint-400"
        aria-label="Visit TikTok"
      >
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="w-6 h-6"
          aria-hidden="true"
        >
          <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93v6.16c0 2.52-1.12 4.84-2.9 6.15-2.24 1.64-5.36 1.81-7.77.43-2.42-1.39-3.74-4.23-3.08-6.95.83-3.4 4.34-5.52 7.61-4.24v4.03c-1.39-.93-3.32-.42-4.14 1.05-.62 1.12-.34 2.66.72 3.4 1.05.74 2.58.58 3.44-.45.42-.5.66-1.14.66-1.8V.02h4.38z"/>
        </svg>
      </a>
    </div>

    <div class="flex items-center gap-5 text-xl md:pl-5">
      <ThemeIcon />
      <button class="hamburger" aria-label="Open menu">
        <Icon name="bars" />
        <Icon name="xmark" />
      </button>
    </div>
  </div>
</header>